<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         bootstrap="test/test_bootstrap.php"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         cacheTokens="true"
         processIsolation="false"
         stopOnFailure="false">
    <php>
        <ini name="memory_limit" value="256M"/>
    </php>
    <testsuites>
        <testsuite name="DM Server Test Suite">
            <directory>./test/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">./app/controllers</directory>
            <directory suffix=".php">./app/helpers</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="junit" target="build/test-results.xml"/>
        <log type="coverage-html" target="build/report" lowUpperBound="35" highLowerBound="70"/>
    </logging>
</phpunit>
